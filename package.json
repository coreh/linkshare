{
  "name": "linkshare",
  "version": "1.0.0",
  "type": "module",
  "description": "A hierarchical link sharing application",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "NODE_ENV=production bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --check 'src/**/*.ts'",
    "format:fix": "prettier --write 'src/**/*.ts'",
    "check": "bun run typecheck && bun run lint && bun run format",
    "i18n:extract": "bun run scripts/i18n-extract.ts",
    "i18n:compile": "bun run scripts/i18n-compile.ts",
    "i18n": "bun run i18n:extract && bun run i18n:compile",
    "build:css": "bun run scripts/build-css.ts",
    "build": "bun run i18n:compile && bun run build:css",
    "postinstall": "bun run i18n:compile && bun run build:css"
  },
  "dependencies": {
    "elysia": "1.4.22",
    "gettext-parser": "^8.0.0",
    "handlebars": "^4.7.8",
    "smol-toml": "1.6.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@types/bun": "1.3.8",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  }
}
